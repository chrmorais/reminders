<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Material.Light.DarkActionBar">
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
    </style>

    <style name="AppSettingsTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/AppSettingsActionBar</item>
    </style>

    <style name="DialogActivityTheme" parent="android:Theme.Material.Light.Dialog">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppSettingsActionBar" parent="android:Widget.Material.ActionBar.Solid">
        <item name="android:displayOptions">homeAsUp|showTitle</item>
    </style>

</resources>
